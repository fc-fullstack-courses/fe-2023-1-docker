# comment

#створити образ на основі образу ноди
FROM node:18-alpine

# виконати команду
RUN mkdir /server

# змінюємо робочу директорію в контейнері для виконання команд
WORKDIR /server

# копіюємо файли серверу в контейнер
#COPY . /server
COPY ./ ./

RUN npm install

# відкрити в контейері порт
EXPOSE 5000

# командя для запуску серверу при підйомі контейнеру
CMD [ "npm", "run", "start" ]